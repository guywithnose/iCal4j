<assembly>
	<id>src</id>
	<formats>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>README</include>
				<include>LICENSE</include>
				<include>CHANGELOG</include>
				<include>AUTHORS</include>
				<include>pom.xml</include>
				<include>build.xml</include>
				<include>build.properties.sample</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>etc</directory>
			<outputDirectory>etc</outputDirectory>
			<includes>
				<include>FAQ</include>
				<include>TODO</include>
				<include>rfc2445.txt</include>
				<include>standard_deviations.txt</include>
				<include>samples/**</include>
				<include>checkstyle.xml</include>
				<include>zoneinfo*/**</include>
			</includes>
			<excludes>
				<exclude>zoneinfo/zones.h</exclude>
				<exclude>zoneinfo/zones.tab</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>source</directory>
			<outputDirectory>source</outputDirectory>
			<includes>
				<include>**/*.java</include>
				<include>**/tz.alias</include>
				<include>**/package.html</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>test</directory>
			<outputDirectory>test</outputDirectory>
			<includes>
				<include>**/*.java</include>
				<include>log4j.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/site/apidocs</directory>
			<outputDirectory>docs/apidocs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>docs</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>*.html</include>
				<include>css/*.css</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>${project.finalName}.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>avalon-framework:avalon-framework</exclude>
				<exclude>log4j:log4j</exclude>
				<exclude>logkit:logkit</exclude>
				<exclude>javax.servlet:servlet-api</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
